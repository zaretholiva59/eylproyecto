# ===========================================
# CONFIGURACIÓN DE ENTORNO - PROYECTO EYL
# ===========================================
# Copia este archivo como .env y configura los valores

# ===========================================
# CONFIGURACIÓN BÁSICA
# ===========================================
DJANGO_ENV=development
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=tu-secret-key-super-seguro-aqui-cambiar-en-produccion

# ===========================================
# CONFIGURACIÓN DE HOSTS
# ===========================================
# Desarrollo
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Producción (ejemplo)
# DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,api.tu-dominio.com

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
# PostgreSQL (recomendado para producción)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=eyl_db
DB_USER=postgres
DB_PASSWORD=tu-password-seguro
DB_HOST=localhost
DB_PORT=5432

# SQLite (solo para desarrollo)
# DATABASE_URL=sqlite:///db.sqlite3

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================
# Redis (recomendado para producción)
CACHE_URL=redis://localhost:6379/1

# Memoria (solo para desarrollo)
# CACHE_URL=locmem://

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ===========================================
STATIC_ROOT=/var/www/eyl/staticfiles/
MEDIA_ROOT=/var/www/eyl/media/

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-app

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/django.log
SECURITY_LOG_FILE=logs/security.log

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
# Solo para producción
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ===========================================
# CONFIGURACIÓN DE SESIONES
# ===========================================
SESSION_COOKIE_AGE=3600
SESSION_EXPIRE_AT_BROWSER_CLOSE=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
# Solo para desarrollo local
DEBUG_TOOLBAR=True
DEBUG_SQL=True

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================
# Solo para producción
# DJANGO_ENV=production
# DJANGO_DEBUG=False
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
